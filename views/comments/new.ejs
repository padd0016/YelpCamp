<% include ../partials/header %>
<h2 class="text-center">Add a new comment to <%= campground.name %></h2>


<p></p>

<div class="container">
    <div style="width: 30%; margin: 10px auto;">
        <div class="row">
            <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
                <div class="form-group">
                    <!--This Bootstrap class gives us nice spacing-->
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-default btn-block btn-primary">Submit!</button>
                </div>
                
                
                
                <!--btn-block is a Bootstrap way of making it a block element-->
            </form>
            <p></p>
            <a href="/campgrounds"><strong>Back to Campground</strong></a>
        </div>
    </div>
</div>



<% include ../partials/footer %>