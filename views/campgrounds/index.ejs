<% include ../partials/header %>


<div class="container">

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp!!</h1>
        <p>From a guy who hates bugs</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a>
        </p>
    </div>
</header>

<div class="row">
    <div class="col-lg-12">
        <h3>Our Best Bug-Free Sites</h3>
    </div>
</div>

<!--The display:flex thing lets our rows behave nicely with different img heights-->
<!--This will move to css-->
<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <!--text-center is a Bootstrap class-->
    <% for (i=0; i<campgrounds.length; i++){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campgrounds[i].image %>"></img>
                <div class="caption">
                    <h4><%= campgrounds[i].name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            
            
            
    </div>
    <% } %>
</div>
        
</div>    

<% include ../partials/footer %>